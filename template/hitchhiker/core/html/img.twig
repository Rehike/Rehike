 #}
{%- macro img(data) -%}
    <img
        alt="{{ data.alt }}"
        aria-hidden="{{ data.ariaHidden ?? "true"  }}"
        {%- if data.ytImg -%}
            data-ytimg="1"
        {%- endif -%}
        {%- for name, value in data.customAttributes -%}
            {{ name }}="{{ value }}" 
        {%- endfor -%}
        {%- if data.onload -%}
            onload="{{ data.onload }}"
        {%- endif -%}
        {%- if data.width -%}
            width="{{ data.width }}"
        {%- endif -%}
        {%- if data.height -%}
            height="{{ data.height }}"
        {%- endif -%}
        {#
            If delayload is set, the image source is
            stored in another attribute to be swapped
            in by JS.
         #}
        {%- if not (data.delayLoad == false) -%}
            data-thumb="{{ data.src }}"
            src="{{ PIXEL }}" {# Global pixel variable #}
        {%- else -%}
            src="{{ data.src }}"
        {%- endif -%}
    >
{%- endmacro -%}