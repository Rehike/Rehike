#player,#placeholder-player {
    position: relative;
    margin-left: auto;
    margin-right: auto;
    color: #fff;
    zoom:1;-moz-transition: background-color .3s ease-in-out,background-image .3s ease-in-out;
    -webkit-transition: background-color .3s ease-in-out,background-image .3s ease-in-out;
    transition: background-color .3s ease-in-out,background-image .3s ease-in-out
}

#player {
    top: 10px;
    width: 100%
}

#placeholder-player {
    margin-bottom: 10px;
    z-index: 0
}

#player.off-screen {
    position: absolute
}

.player-api {
    background: #000
}

.player-api:focus {
    outline: none
}

#player .player-api {
    position: absolute;
    z-index: 5
}

html[data-player-size=fullscreen] #player .player-api {
    z-index: 100
}

#placeholder-player .player-api {
    position: relative
}

.player-api object,.player-api embed {
    position: relative;
    width: 100%!important;
    height: 100%!important
}

.player-width {
    width: 640px
}

.player-height {
    height: 390px
}

.exp-watch-controls-overlay .player-height {
    height: 360px
}

.exp-cougar-alternate-controls .player-height {
    height: 400px
}

.watch-multicamera .player-height {
    height: 470px
}

.exp-watch-controls-overlay .watch-multicamera .player-height {
    height: 440px
}

.watch-tiny .player-width,.watch-tiny .watch-stage-mode .player-width {
    width: 426px
}

.watch-tiny .player-height,.watch-tiny .watch-stage-mode .player-height {
    height: 270px
}

.exp-watch-controls-overlay .watch-tiny .player-height {
    height: 240px
}

.exp-cougar-alternate-controls .watch-tiny .player-height {
    height: 280px
}

.watch-tiny.watch-multicamera .player-height {
    height: 350px
}

.exp-watch-controls-overlay .watch-tiny.watch-multicamera .player-height {
    height: 320px
}

@media screen and (min-width: 1294px) and (min-height:630px) {
    .player-width {
        width:854px
    }

    .player-height {
        height: 510px
    }

    .exp-watch-controls-overlay .player-height {
        height: 480px
    }

    .exp-cougar-alternate-controls .player-height {
        height: 520px
    }

    .watch-multicamera .player-height {
        height: 590px
    }

    .exp-watch-controls-overlay .watch-multicamera .player-height {
        height: 560px
    }
}

@media screen and (min-width: 1720px) and (min-height:980px) {
    .player-width {
        width:1280px
    }

    .player-height {
        height: 750px
    }

    .exp-watch-controls-overlay .player-height {
        height: 720px
    }

    .exp-cougar-alternate-controls .player-height {
        height: 760px
    }

    .watch-multicamera .player-height {
        height: 830px
    }

    .exp-watch-controls-overlay .watch-multicamera .player-height {
        height: 800px
    }
}

.content-snap-width-skinny-mode .player-width,.watch-stage-mode .player-width {
    margin-left: 50%
}

.content-snap-width-skinny-mode .player-width {
    left: -213px
}

.watch-stage-mode .player-width {
    width: 854px;
    left: -427px
}

.watch-stage-mode .player-height {
    height: 510px
}

.exp-watch-controls-overlay .watch-stage-mode .player-height {
    height: 480px
}

.exp-cougar-alternate-controls .watch-stage-mode .player-height {
    height: 520px
}

.watch-stage-mode .watch-multicamera .player-height {
    height: 590px
}

.exp-watch-controls-overlay .watch-stage-mode .watch-multicamera .player-height {
    height: 560px
}

@media screen and (min-width: 1320px) and (min-height:870px) {
    .watch-stage-mode .player-width {
        width:1280px;
        left: -640px
    }

    .watch-stage-mode .player-height {
        height: 750px
    }

    .exp-watch-controls-overlay .watch-stage-mode .player-height {
        height: 720px
    }

    .exp-cougar-alternate-controls .watch-stage-mode .player-height {
        height: 760px
    }

    .watch-stage-mode .watch-multicamera .player-height {
        height: 830px
    }

    .exp-watch-controls-overlay .watch-stage-mode .watch-multicamera .player-height {
        height: 800px
    }
}

#theater-background {
    position: absolute;
    left: 0;
    width: 100%;
    background-color: transparent;
    -moz-transition: background-color .3s ease;
    -webkit-transition: background-color .3s ease;
    transition: background-color .3s ease
}

.watch-stage-mode #theater-background {
    background-color: #1b1b1b
}

#watch7-sidebar {
    margin-top:-400px;
}

.watch-stage-mode #player-playlist .watch-playlist {
    top: 150px;
}
