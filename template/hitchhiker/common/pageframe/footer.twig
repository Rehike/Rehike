{%- from "common/uix/button.twig" import render as button -%}
<div id="footer">
    <div id="footer-main">
        <div id="footer-logo">
            <a href="/" id="footer-logo-link" class="spf-link" title="{{ yt.footer.logoTooltip }}">
                <span class="footer-logo-icon yt-sprite"></span>
            </a>
        </div>
        {# 
            *** Picker buttons ***
        #}
        {% if yt.footer.pickers is not empty %}
            <ul class="pickers yt-uix-button-group" data-button-toggle-group="optional">
                {%- for btn in yt.footer.pickers -%}
                <li>
                    {{ button(btn) }}
                </li>
                {%- endfor -%}
            </ul>
        {% endif %}
        {%- for btn in yt.footer.buttons -%}
        {{ button(btn) }}
        {%- endfor -%}
        {# 
            *** Picker bodies ***
        #}
        {% if yt.footer.pickers is not empty %}
            {% for btn in yt.footer.pickers %}
                <div id="{{ btn.pickerTarget }}" class="yt-picker" style="display:none">
                    {% from "core/spinner.twig" import render as spinner %}
                    {{ spinner(yt.msgs.loading) }}
                </div>
            {% endfor %}
        {% endif %}
    </div>
    <div id="footer-links">
        <ul id="footer-links-primary">
            {% for link in yt.footer.primaryLinks %}
            <li>
                <a href="{{ rehike.getUrl(link) }}">{{ rehike.getText(link) }}</a>
            </li>
            {% endfor %}
        </ul>
        <ul id="footer-links-secondary">
            {% for link in yt.footer.secondaryLinks %}
            <li>
                <a href="{{ rehike.getUrl(link) }}">{{ rehike.getText(link) }}</a>
            </li>
            {% endfor %}
            {%- if yt.footer.enableCopyright -%}
            <li>
                <span class="copyright" dir="ltr">{{ yt.footer.copyright }}</span>
            </li>
            {%- endif -%}
        </ul>
    </div>
</div>